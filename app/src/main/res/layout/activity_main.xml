<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#045B81"
    android:weightSum="6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|right"
        android:textColor="#101010"
        android:textStyle="bold"
        android:textSize="30sp"
        android:background="#96F8CD"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:id="@+id/un"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="1"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:onClick="ButtonClick"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/deux"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="2"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:onClick="ButtonClick"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/trois"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="3"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="+"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:textSize="30dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:id="@+id/quatre"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="4"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/cinq"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="5"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="6"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/moins"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="-"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:textSize="30dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:id="@+id/sept"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="7"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/huit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="8"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/neuf"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="9"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/mul"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="*"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:textSize="30dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:id="@+id/plusoumoins"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="+/-"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="0"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/point"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="."
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/div"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="/"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:textSize="30dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="sup"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/m"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="M"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/mr"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="MR"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/equal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="="
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:textSize="30dp"/>

    </LinearLayout>

</LinearLayout>